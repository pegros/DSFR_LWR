    <targets>
        <target>lightningCommunity__Page</target>  
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property   name="openTab"
                        label="Onglet Ouvert"
                        type="String"
                        default="1"
                        datasource="1,2,3,4,5"
                        description="Onglet ouvert par défaut." />
                        
            <property   name="title1"
                        label="Titre #1"
                        type="String"
                        default="Onglet #1"
                        description="Titre de la section #1." />
            <property   name="titleIcon1"
                        label="Icône #1"
                        type="String"
                        default="checkbox-line"
                        description="Nom de l'icône DSFR du titre de la section #1" />
