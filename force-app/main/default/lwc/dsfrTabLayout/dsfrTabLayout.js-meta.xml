                        description="Titre de la section #3." />
            <property   name="titleIcon3"
                        label="Icône #3"
                        type="String"
                        description="Nom de l'icône DSFR du titre de la section #3" />
            <property   name="title4"
                        label="Titre #4"
                        type="String"
                        description="Titre de la section #4." />
            <property   name="titleIcon4"
                        label="Icône #4"
                        type="String"
                        description="Nom de l'icône DSFR du titre de la section #4" />
            <property   name="title5"
                        label="Titre #5"
                        type="String"
                        description="Titre de la section #5." />
            <property   name="titleIcon5"
                        label="Icône #5"
                        type="String"
                        description="Nom de l'icône DSFR du titre de la section #5" />

            <property   name="isDebug"
                        label="Debug ?"
                        type="Boolean"
                        default="false"
                        description="Activation de détails pour l'analyse de problèmes" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>